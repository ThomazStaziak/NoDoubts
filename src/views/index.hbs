<!-- Content - início -->
<div class="container">
	<div class="row">
		<!-- Main - início -->
		<main class="col-12 col-md-8">
			<!-- Posts - início -->
			{{#if questions}}
			<section class="row">
				{{#each questions}}
				<!-- Post User Offline - início -->
				<div
					class="post shadow-sm bg-white rounded-sm col-12 p-3 pt-5 my-4 mx-3 mx-md-1 d-flex flex-row flex-wrap">
					<article class="col-12 col-md-10 d-flex flex-wrap px-0">
						<aside class="col-3">
							<div class="d-flex flex-column justify-content-center align-items-center">
								<img src="../public/img/uploads/{{user.image}}" alt="" height="50" width="50"
									class="d-block mx-auto rounded-circle">
								<small>{{user.nickname}}</small>
							</div>
							<hr class="col-auto">
							<div class="d-flex flex-wrap justify-content-center align-items-stretch">
								<i class="align-self-center m-3" title="Posts"><span
										class="badge badge-info badge-pill">112</span></i>
								<i class="fab fa-font-awesome-flag text-success m-3" title="Marcado como Destaque"></i>
								<i class="fas fa-medal m-3 text-primary" title="Tópico Campeão"></i>
								<i class="fas fa-tag m-3 text-danger" title="Tageado"></i>
								<!-- Por algum motivo, esse último item ficou desalinhado, por isso as classes distintas -->
							</div>
						</aside>
						<section class="col">
							<a href="/perguntas/{{id}}" target="_self" rel="next"
								title="Saiba mais sobre Titela's Feelings">
								<h4 class="text-dark">{{{title}}}</h4>
							</a>
							<a href="/categoria/{{{categories.id}}}">
								<small>{{{categories.title}}}</small>
							</a>
							<p id="contentP" class="text-black-50 text-justify mt-3">{{{content}}}</p>
						</section>
					</article>
					<aside class="col-12 col-md-2 px-0 py-4">
						<ul class="list-group d-flex flex-row d-md-block justify-content-around">
							<li class="list-group-item bg-white text-black-50 text-center border-0 mb-3"><span
									class="badge-secondary text-center px-3 py-2">165</span><span
									class="text-black-50 d-block">&#9660;</span></li>
							<li class="list-group-item bg-white text-black-50 text-center border-0 mb-3"><i
									class="fas fa-clock"></i>
								Publicado há {{{time}}}</li>
						</ul>
					</aside>
				</div>
				<!-- Post User Offline - final -->
				{{/each}}
			</section>
			{{else}}
			<div class="col-md-12 my-4">
				<div class="alert alert-danger" role="alert">
					Não tem nenhuma pergunta ainda :(
				</div>
			</div>
			{{/if}}
			<!-- Posts - final -->
		</main>
		<!-- Main - final -->


		<!-- Aside - início -->
		<aside class="col-12 col-md-4 pl-4">
			<!-- Aside Nav > Principais Perguntas - início -->
			<article class="col-12 d-flex flex-row shadow-sm bg-white rounded-sm p-3 my-4 sticky-top"
				id="asideTopoTopPerguntas">
				<section class="col-12">
					<a href="index.html" target="_self" rel="next" title="Acesse todas as perguntas">
						<h4 class="text-dark">Perguntas recentes</h4>
					</a>
					<hr class="col-auto">
					<ul class="list-group text-black-50">
						{{#each recentQuestions}}
						<li class="list-group-item border-left-0 border-right-0 border-top-0 px-0"><a
								href="/perguntas/{{{id}}}" class="text-black-50" rel="next" target="_self"
								title="{{{title}}}">{{{title}}}</a></li>
						{{/each}}
					</ul>
				</section>
			</article>
			<!-- Aside Nav > Principais Perguntas - final -->
			<!-- Aside Nav > Categorias - início -->
			<article class="col-12 d-flex flex-row shadow-sm bg-white rounded-sm p-3 my-4 sticky-top" id="asideTopoCat">
				<section class="col-12">
					<a href="index.html" target="_self" rel="next" title="Acesse todas as Categorias">
						<h4 class="text-dark">Categorias</h4>
					</a>
					<hr class="col-auto">
					<ul class="list-group text-black-50">
						{{#each categories}}
						<li
							class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 py-1">
							<a href="/categoria/{{{id}}}" class="text-black-50" target="_self" rel="next"
								title="{{{title}}}">
								{{{title}}}
							</a>
							<span class="badge badge-secondary badge-pill">{{{categories.length}}}</span>
						</li>
						{{/each}}
					</ul>
				</section>
			</article>
			<!-- Aside Nav > Categorias - final -->
			<!-- Aside Nav > Enquete da Semana - início -->
			<article class="col-12 d-flex flex-row shadow-sm bg-white rounded-sm p-3 my-4 sticky-top" id="asideTopoEnq">
				<section class="col-12">
					<a href="#" target="_self" rel="next" title="Acesse todas as enquetes">
						<h4 class="text-dark">Assuntos em destaque</h4>
					</a>
					<hr class="col-auto">
					<p>Esses são os assuntos mais estudados</p>
					{{#each trendQuestions}}
					<!-- Progress Bar #01 -->
					<div class="row d-flex flex-row flex-nowrap mb-3">
						<div class="progress col-10 pl-0 mr-auto ml-3" style="height: 30px;">
							<div class="progress-bar progress-bar-striped progress-bar-animated bg-success"
								role="progressbar" style="width: {{progress}}%;" aria-valuenow="{{progress}}"
								aria-valuemin="0" aria-valuemax="100">
								<span class="text-dark">
									{{title}}
								</span>
							</div>
						</div>
					</div>
					{{/each}}
					<small class="text-muted">Temas mostrados de acordo com o número de perguntas</small>
				</section>
			</article>
			<!-- Aside Nav > Enquete da Semana - final -->
		</aside>
		<!-- Aside - final -->


	</div>
</div>
<!-- Content - final -->

