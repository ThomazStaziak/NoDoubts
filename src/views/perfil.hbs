<!-- Content - início -->
<div class="container">
	<div class="row">
		<!-- Main - início -->
		<main class="col-12 col-md-8">
			<!-- Posts - início -->
			<section class="row">
				<!-- Post User Offline - início -->
				<div
					class="post shadow-sm bg-white rounded-sm col-12 p-3 pt-5 my-4 mx-3 mx-md-1 d-flex flex-column justify-content-center align-items-center">
					<img src="../../public/img/uploads/{{{session.user.avatar}}}" height="250" width="250"
						class="rounded-circle shadow" alt="foto de perfil">
					<div class="mt-4">
						<p>Nickname</p>
						<h3>{{{session.user.nickname}}}</h3>
					</div>
					<div class="mt-4">
						<p>Nome</p>
						<h3>{{{session.user.firstname}}}</h3>
					</div>
					<div class="mt-4">
						<p>Sobrenome</p>
						<h3>{{{session.user.lastname}}}</h3>
					</div>
					<div class="mt-4">
						<p>Email</p>
						<h3>{{{session.user.email}}}</h3>
					</div>
					<button class="btn btn-secondary">Editar perfil <i class="fas fa-pencil"></i></button>
					<h3>Conquistas</h3>
					<table class="table">
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">First</th>
								<th scope="col">Last</th>
								<th scope="col">Handle</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<th scope="row">1</th>
								<td>Mark</td>
								<td>Otto</td>
								<td>@mdo</td>
							</tr>
							<tr>
								<th scope="row">2</th>
								<td>Jacob</td>
								<td>Thornton</td>
								<td>@fat</td>
							</tr>
							<tr>
								<th scope="row">3</th>
								<td>Larry</td>
								<td>the Bird</td>
								<td>@twitter</td>
							</tr>
						</tbody>
					</table>
				</div>
				<!-- Post User Offline - final -->
			</section>
			<!-- Posts - final -->
		</main>
		<!-- Main - final -->


		<!-- Aside - início -->
		<aside class="col-12 col-md-4 pl-4">
			<!-- Aside Nav > Principais Perguntas - início -->
			<article class="col-12 d-flex flex-row shadow-sm bg-white rounded-sm p-3 my-4 sticky-top"
				id="asideTopoTopPerguntas">
				<section class="col-12">
					<a href="index.html" target="_self" rel="next" title="Acesse todas as perguntas">
						<h4 class="text-dark">Perguntas recentes</h4>
					</a>
					<hr class="col-auto">
					<ul class="list-group text-black-50">
						{{#each recentQuestions}}
						<li class="list-group-item border-left-0 border-right-0 border-top-0 px-0"><a
								href="/perguntas/{{{id}}}" class="text-black-50" rel="next" target="_self"
								title="{{{title}}}">{{{title}}}</a></li>
						{{/each}}
					</ul>
				</section>
			</article>
			<!-- Aside Nav > Principais Perguntas - final -->
			<!-- Aside Nav > Categorias - início -->
			<article class="col-12 d-flex flex-row shadow-sm bg-white rounded-sm p-3 my-4 sticky-top" id="asideTopoCat">
				<section class="col-12">
					<a href="index.html" target="_self" rel="next" title="Acesse todas as Categorias">
						<h4 class="text-dark">Categorias</h4>
					</a>
					<hr class="col-auto">
					<ul class="list-group text-black-50">
						{{#each categories}}
						<li
							class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 py-1">
							<a href="/categoria/{{{id}}}" class="text-black-50" target="_self" rel="next"
								title="{{{title}}}">
								{{{title}}}
							</a>
							<span class="badge badge-secondary badge-pill">{{{categories.length}}}</span>
						</li>
						{{/each}}
					</ul>
				</section>
			</article>
			<!-- Aside Nav > Categorias - final -->
			<!-- Aside Nav > Enquete da Semana - início -->
			<article class="col-12 d-flex flex-row shadow-sm bg-white rounded-sm p-3 my-4 sticky-top" id="asideTopoEnq">
				<section class="col-12">
					<a href="#" target="_self" rel="next" title="Acesse todas as enquetes">
						<h4 class="text-dark">Assuntos em destaque</h4>
					</a>
					<hr class="col-auto">
					<p>Esses são os assuntos mais estudados</p>
					{{#each trendQuestions}}
					<!-- Progress Bar #01 -->
					<div class="row d-flex flex-row flex-nowrap mb-3">
						<div class="progress col-10 pl-0 mr-auto ml-3" style="height: 30px;">
							<div class="progress-bar progress-bar-striped progress-bar-animated bg-success"
								role="progressbar" style="width: {{progress}}%;" aria-valuenow="{{progress}}"
								aria-valuemin="0" aria-valuemax="100">
								<span class="text-dark">
									{{title}}
								</span>
							</div>
						</div>
					</div>
					{{/each}}
					<small class="text-muted">Temas mostrados de acordo com o número de perguntas</small>
				</section>
			</article>
			<!-- Aside Nav > Enquete da Semana - final -->
		</aside>
		<!-- Aside - final -->


	</div>
</div>
<!-- Content - final -->
